{
  "namespace": "ryPLHUD",
  "text_edit_box_hover": {
    "type": "image",
    "texture": "textures/ui/slider_border",
    "size": ["100% + 2px", "100% + 2px"]
  },
  "player_list_panel@common.root_panel": {
    "prevent_touch_input": true,
    "layer": 512,
    "size": ["80%", "80%"],
    "offset": "$player_list_panel_offset",
    "$player_list_panel_offset|default": [0, 4],
    "variables": [
      { "requires": "$touch", "$player_list_panel_offset": [0, 24] }
    ],
    "anchor_from": "top_middle",
    "anchor_to": "top_middle",
    "controls": [
      {
        "stacked_content": {
          "type": "stack_panel",
          "orientation": "vertical",
          "anchor_from": "top_middle",
          "anchor_to": "top_middle",
          "size": ["100%", "100%"],
          "layer": 2,
          "controls": [
            {
              "top_panel": {
                "type": "panel",
                "size": ["100%", 12],
                "controls": [
                  {
                    "background": {
                      "type": "image",
                      "texture": "textures/ui/Black",
                      "size": ["100%", "100%"],
                      "alpha": 0.72,
                      "layer": 1
                    }
                  },
                  {
                    "content": {
                      "type": "panel",
                      "size": ["100%", "100%"],
                      "controls": [
                        {
                          "list_counter": {
                            "type": "panel",
                            "size": [96, "100%"],
                            "anchor_from": "left_middle",
                            "anchor_to": "left_middle",
                            "controls": [
                              {
                                "scoreboard_list_count_text": {
                                  "type": "label",
                                  "text": "#text",
                                  "anchor_from": "left_middle",
                                  "anchor_to": "left_middle",
                                  "offset": [2, 0],
                                  "size": ["default", "default"],
                                  "layer": 9,
                                  "bindings": [
                                    {
                                      "binding_name": "#scored_list_size",
                                      "binding_type": "global"
                                    },
                                    {
                                      "binding_type": "view",
                                      "source_property_name": "('§z' + #scored_list_size + ' totals')",
                                      "target_property_name": "#text"
                                    },
                                    {
                                      "binding_type": "view",
                                      "source_control_name": "list_hud_swither_toggle",
                                      "source_property_name": "#toggle_state",
                                      "target_property_name": "#visible"
                                    }
                                  ]
                                }
                              },
                              {
                                "player_count_panel": {
                                  "type": "panel",
                                  "size": ["100%", 10],
                                  "anchor_from": "left_middle",
                                  "anchor_to": "left_middle",
                                  "offset": [2, 0],
                                  "clips_children": true,
                                  "layer": 2,
                                  "controls": [
                                    {
                                      "players_grid_count": {
                                        "type": "grid",
                                        "size": ["100%", "default"],
                                        "grid_item_template": "ryPLHUD.player_counter",
                                        "grid_dimension_binding": "#players_grid_dimension",
                                        "collection_name": "$players_collection_name",
                                        "anchor_from": "bottom_middle",
                                        "anchor_to": "bottom_middle",
                                        "bindings": [
                                          {
                                            "binding_name": "#players_grid_dimension",
                                            "binding_condition": "always"
                                          }
                                        ]
                                      }
                                    }
                                  ],
                                  "bindings": [
                                    {
                                      "binding_type": "view",
                                      "source_control_name": "list_hud_swither_toggle",
                                      "source_property_name": "(not #toggle_state)",
                                      "target_property_name": "#visible"
                                    }
                                  ]
                                }
                              },
                              {
                                "list_swither_button@common_toggles.light_content_toggle": {
                                  "$toggle_name": "list_swither_toggles",
                                  "$toggle_view_binding_name": "list_hud_swither_toggle",
                                  "$button_content": "common.empty_panel",
                                  "$default_texture": "",
                                  "$hover_texture": "",
                                  "$pressed_texture": "",
                                  "$pressed_no_hover_texture": "",
                                  "$locked_texture": "",
                                  "$toggle_focus_enabled": false,
                                  "$default_border_visible": false,
                                  "$hover_border_visible": false,
                                  "$border_visible": false,
                                  "$locked_alpha": 0.5,
                                  "layer": 9,
                                  "$button_mappings": [
                                    {
                                      "from_button_id": "button.slot1",
                                      "to_button_id": "button.menu_select",
                                      "mapping_type": "global"
                                    },
                                    {
                                      "from_button_id": "button.menu_select",
                                      "to_button_id": "button.menu_select",
                                      "mapping_type": "pressed"
                                    },
                                    {
                                      "from_button_id": "button.menu_ok",
                                      "to_button_id": "button.menu_ok",
                                      "mapping_type": "focused"
                                    }
                                  ]
                                }
                              }
                            ]
                          }
                        },
                        {
                          "world_name": {
                            "type": "label",
                            "text": "#world_title",
                            "anchor_from": "center",
                            "anchor_to": "center",
                            "layer": 8,
                            "size": ["default", 10],
                            "bindings": [
                              { "binding_name": "#player_list_title" },
                              {
                                "binding_type": "view",
                                "source_property_name": "('§z' + #player_list_title)",
                                "target_property_name": "#world_title"
                              }
                            ]
                          }
                        },
                        {
                          "search_player": {
                            "type": "panel",
                            "size": [102, "100%"],
                            "anchor_from": "right_middle",
                            "anchor_to": "right_middle",
                            "layer": 2,
                            "controls": [
                              {
                                "text_boxt_1@common.text_edit_box": {
                                  "layer": 90,
                                  "size": ["100%", "100%"],
                                  "max_length": 24,
                                  "$place_holder_text": "Search Gamertag...",
                                  "$text_edit_text_control": "search_gamertag_control",
                                  "$text_box_name": "search_gamertag_name",
                                  "$text_background_default": "common.empty_panel",
                                  "$text_background_hover": "ryPLHUD.text_edit_box_hover",
                                  "$text_edit_box_label_offset": [0, 0],
                                  "$place_holder_text_color": "$7_color_format",
                                  "button_mappings": [
                                    {
                                      "from_button_id": "button.slot2",
                                      "to_button_id": "$text_edit_box_selected_to_button_id",
                                      "handle_select": true,
                                      "handle_deselect": true,
                                      "mapping_type": "global"
                                    },
                                    {
                                      "from_button_id": "button.menu_select",
                                      "to_button_id": "$text_edit_box_selected_to_button_id",
                                      "handle_select": true,
                                      "handle_deselect": true,
                                      "mapping_type": "pressed"
                                    },
                                    {
                                      "from_button_id": "button.scoreboard",
                                      "to_button_id": "$text_edit_box_deselected_to_button_id",
                                      "handle_select": false,
                                      "handle_deselect": true,
                                      "mapping_type": "global"
                                    }
                                  ]
                                }
                              }
                            ],
                            "bindings": [
                              {
                                "binding_type": "view",
                                "source_control_name": "list_hud_swither_toggle",
                                "source_property_name": "(not #toggle_state)",
                                "target_property_name": "#visible"
                              }
                            ]
                          }
                        }
                      ]
                    }
                  }
                ]
              }
            },
            {
              "line": {
                "type": "image",
                "texture": "textures/ui/White",
                "size": ["100%", 1],
                "alpha": 0.45,
                "layer": 2
              }
            },
            {
              "content_panel": {
                "type": "panel",
                "size": ["100%", "fill"],
                "clips_children": false,
                "controls": [
                  { "content_grid_panel@ryPLHUD.content_grid_panel": {} },
                  {
                    "background": {
                      "type": "image",
                      "texture": "textures/ui/Black",
                      "layer": 1,
                      "size": ["100%", "100%"],
                      "alpha": 0.22
                    }
                  }
                ]
              }
            }
          ]
        }
      }
    ],
    "bindings": [
      {
        "binding_type": "view",
        "source_control_name": "player_list_toggle",
        "source_property_name": "#toggle_state",
        "target_property_name": "#visible"
      }
    ]
  },
  "content_grid_panel": {
    "type": "panel",
    "size": ["100%", "100%"],
    "controls": [
      {
        "players_list_grid": {
          "type": "grid",
          "size": ["25%", "100%c"],
          "offset": ["9.4%", 0],
          "layer": 2,
          "anchor_from": "top_left",
          "anchor_to": "top_left",
          "grid_item_template": "ryPLHUD.player_list_grid_item",
          "grid_dimension_binding": "#players_grid_dimension",
          "$players_collection_name": "players_collection",
          "collection_name": "$players_collection_name",
          "bindings": [
            {
              "binding_name": "#players_grid_dimension",
              "binding_condition": "always"
            },
            {
              "binding_type": "view",
              "source_control_name": "list_hud_swither_toggle",
              "source_property_name": "(not #toggle_state)",
              "target_property_name": "#visible"
            }
          ]
        }
      },
      {
        "scoreboard_list_scored_grid": {
          "type": "grid",
          "size": ["100%", "100%c"],
          "layer": 2,
          "anchor_from": "top_left",
          "anchor_to": "top_left",
          "grid_rescaling_type": "horizontal",
          "grid_item_template": "ryPLHUD.scoreboard_list_grid_item",
          "$scoreboard_collection_name": "scoreboard_scored_list_collection",
          "collection_name": "$scoreboard_collection_name",
          "$is_scoreboard_scored": true,
          "bindings": [
            { "binding_name": "#scored_list_size", "binding_type": "global" },
            {
              "binding_type": "view",
              "source_control_name": "list_hud_swither_toggle",
              "source_property_name": "#toggle_state",
              "target_property_name": "#toggle"
            },
            {
              "binding_type": "view",
              "source_property_name": "#scored_list_size",
              "target_property_name": "#maximum_grid_items"
            },
            {
              "binding_type": "view",
              "source_property_name": "((#scored_list_size > 0) and #toggle)",
              "target_property_name": "#visible"
            }
          ]
        }
      },
      {
        "scoreboard_list_unscored_grid": {
          "type": "grid",
          "size": ["100%", "100%c"],
          "layer": 2,
          "anchor_from": "top_left",
          "anchor_to": "top_left",
          "grid_rescaling_type": "horizontal",
          "grid_item_template": "ryPLHUD.scoreboard_list_grid_item",
          "$scoreboard_collection_name": "scoreboard_unscored_list_collection",
          "collection_name": "$scoreboard_collection_name",
          "bindings": [
            { "binding_name": "#unscored_list_size", "binding_type": "global" },
            {
              "binding_type": "view",
              "source_control_name": "list_hud_swither_toggle",
              "source_property_name": "#toggle_state",
              "target_property_name": "#toggle"
            },
            {
              "binding_type": "view",
              "source_property_name": "#unscored_list_size",
              "target_property_name": "#maximum_grid_items"
            },
            {
              "binding_type": "view",
              "source_property_name": "((#unscored_list_size > 0) and #toggle)",
              "target_property_name": "#visible"
            }
          ]
        }
      }
    ]
  },
  "scoreboard_list_grid_item": {
    "type": "panel",
    "size": ["25%", 12],
    "$is_scoreboard_scored|default": false,
    "controls": [
      {
        "bg": {
          "type": "image",
          "texture": "textures/ui/Black",
          "alpha": 0.2,
          "size": ["100%", 12],
          "layer": 1
        }
      },
      {
        "content": {
          "type": "stack_panel",
          "orientation": "horizontal",
          "size": ["100% - 2px", 10],
          "layer": 2,
          "controls": [
            { "padding_left@common.empty_panel": { "size": [1, 0] } },
            {
              "player_avatar@ryPLHUD.player_avatar": {
                "bindings": [
                  {
                    "binding_name": "#player_icon",
                    "binding_name_override": "#texture",
                    "binding_type": "collection",
                    "binding_collection_name": "$scoreboard_collection_name"
                  },
                  {
                    "binding_name": "#player_icon_filesystem",
                    "binding_name_override": "#texture_file_system",
                    "binding_type": "collection",
                    "binding_collection_name": "$scoreboard_collection_name"
                  }
                ]
              }
            },
            { "padding_1@common.empty_panel": { "size": [2, 0] } },
            {
              "player_name_panel": {
                "type": "button",
                "size": ["fill", "100%"],
                "clips_children": true,
                "hover_control": "player_name_hover",
                "controls": [
                  {
                    "player_name@ryPLHUD.player_name": {
                      "shadow": true,
                      "layer": 1
                    }
                  },
                  {
                    "player_name_hover": {
                      "type": "panel",
                      "layer": 2,
                      "ignored": "(not $touch)",
                      "controls": [
                        {
                          "hovering": {
                            "type": "image",
                            "layer": 3,
                            "texture": "textures/ui/slider_border",
                            "allow_clipping": false,
                            "size": ["100% + 4px", "100%"],
                            "alpha": 0.8
                          }
                        },
                        {
                          "hover_text": {
                            "type": "image",
                            "size": ["100%c + 8px", "100%c + 4px"],
                            "anchor_from": "top_left",
                            "anchor_to": "top_left",
                            "layer": 4,
                            "offset": [16, 6],
                            "allow_clipping": false,
                            "texture": "textures/ui/purpleBorder",
                            "controls": [
                              {
                                "player_name@ryPLHUD.player_name": {
                                  "layer": 5,
                                  "anchor_from": "center",
                                  "anchor_to": "center"
                                }
                              }
                            ]
                          }
                        }
                      ]
                    }
                  }
                ]
              }
            },
            {
              "player_score_bg": {
                "type": "image",
                "texture": "textures/ui/White",
                "size": ["100%c + 4px", 10],
                "color": [0.7, 0.7, 0.7],
                "alpha": 0.4,
                "anchor_from": "right_middle",
                "anchor_to": "right_middle",
                "ignored": "(not $is_scoreboard_scored)",
                "controls": [
                  {
                    "player_score": {
                      "type": "label",
                      "text": "#player_score",
                      "size": ["default", 10],
                      "color": "$player_list_score_color",
                      "shadow": true,
                      "layer": 5,
                      "bindings": [
                        {
                          "binding_name": "#player_score",
                          "binding_type": "collection",
                          "binding_collection_name": "$scoreboard_collection_name"
                        }
                      ]
                    }
                  }
                ]
              }
            },
            { "padding_right@common.empty_panel": { "size": [1, 0] } }
          ]
        }
      }
    ]
  },
  "player_list_grid_item": {
    "type": "panel",
    "size": ["25%", 12],
    "controls": [
      {
        "bg": {
          "type": "image",
          "texture": "textures/ui/Black",
          "size": ["100%sm", 12],
          "alpha": 0.34,
          "layer": 1
        }
      },
      {
        "bg2": {
          "type": "image",
          "texture": "textures/ui/White",
          "anchor_from": "top_middle",
          "anchor_to": "top_middle",
          "size": ["100%sm", 11],
          "alpha": 0.24,
          "layer": 2
        }
      },
      {
        "highlight_item": {
          "type": "image",
          "texture": "textures/ui/Black",
          "size": ["100%sm", 12],
          "alpha": 0.87,
          "layer": 12,
          "bindings": [
            {
              "binding_name": "#gamertag",
              "binding_type": "collection",
              "binding_collection_name": "$players_collection_name"
            },
            {
              "binding_type": "view",
              "source_control_name": "search_gamertag_control",
              "source_property_name": "#item_name",
              "target_property_name": "#search_control"
            },
            {
              "binding_type": "view",
              "source_property_name": "((not (#search_control = '')) and ((#gamertag - #search_control) = #gamertag))",
              "target_property_name": "#visible"
            }
          ]
        }
      },
      {
        "player_things": {
          "type": "stack_panel",
          "layer": 2,
          "size": ["400%", 10],
          "orientation": "horizontal",
          "controls": [
            { "padding_left@common.empty_panel": { "size": [1, "100%"] } },
            {
              "avatar": {
                "type": "button",
                "size": [10, 10],
                "layer": 2,
                "hover_control": "avatar_hover",
                "controls": [
                  { "avatar@ryPLHUD.player_avatar": {} },
                  {
                    "avatar_hover": {
                      "type": "image",
                      "size": ["100%c + 8px", "100%c + 8px"],
                      "layer": 4,
                      "allow_clipping": false,
                      "ignored": "(not $touch)",
                      "texture": "textures/ui/purpleBorder",
                      "controls": [
                        {
                          "avatar@ryPLHUD.player_avatar": {
                            "size": [52, 52],
                            "layer": 5,
                            "anchor_from": "center",
                            "anchor_to": "center"
                          }
                        }
                      ]
                    }
                  }
                ],
                "bindings": [
                  {
                    "binding_name": "#gamerpic_visible",
                    "binding_name_override": "#visible",
                    "binding_type": "collection",
                    "binding_collection_name": "$players_collection_name"
                  }
                ]
              }
            },
            {
              "padding_1": {
                "type": "panel",
                "size": [1, "100%"],
                "bindings": [
                  {
                    "binding_name": "#gamerpic_visible",
                    "binding_name_override": "#visible",
                    "binding_type": "collection",
                    "binding_collection_name": "$players_collection_name"
                  }
                ]
              }
            },
            {
              "gamertag_player_panel": {
                "type": "button",
                "size": ["fill", "100%"],
                "clips_children": true,
                "hover_control": "gamertag_hover",
                "controls": [
                  {
                    "gamertag@ryPLHUD.player_gamertag": {
                      "shadow": true,
                      "layer": 1
                    }
                  },
                  {
                    "gamertag_hover": {
                      "type": "panel",
                      "layer": 2,
                      "ignored": "(not $touch)",
                      "controls": [
                        {
                          "hovering": {
                            "type": "image",
                            "layer": 3,
                            "texture": "textures/ui/slider_border",
                            "allow_clipping": false,
                            "size": ["100% + 2px", "100% + 2px"],
                            "alpha": 0.8
                          }
                        },
                        {
                          "hover_text": {
                            "type": "image",
                            "size": ["100%c + 8px", "100%c + 4px"],
                            "anchor_from": "top_left",
                            "anchor_to": "top_left",
                            "layer": 4,
                            "offset": [16, 6],
                            "allow_clipping": false,
                            "texture": "textures/ui/purpleBorder",
                            "controls": [
                              {
                                "gamertag@ryPLHUD.player_gamertag": {
                                  "layer": 5,
                                  "anchor_from": "center",
                                  "anchor_to": "center"
                                }
                              }
                            ]
                          }
                        }
                      ]
                    }
                  },
                  { "new_join_ping@ryPLHUD.new_join_ping": {} }
                ]
              }
            },
            {
              "padding_2": {
                "type": "panel",
                "size": [1, "100%"],
                "ignored": "(not $ryPLHUD:use_fake_ping)"
              }
            },
            {
              "player_ping@ryPLHUD.player_ping": {
                "type": "image",
                "texture": "images/fake_ping",
                "ignored": "(not $ryPLHUD:use_fake_ping)",
                "size": [12, 12],
                "uv_size": [10, 7],
                "uv": "@ryPLHUD.fake_ping_anim"
              }
            },
            { "padding_right@common.empty_panel": { "size": [1, "100%"] } }
          ]
        }
      }
    ]
  },
  "player_name": {
    "type": "label",
    "text": "#player_name",
    "anchor_from": "left_middle",
    "anchor_to": "left_middle",
    "size": ["default", 10],
    "color": "$player_name_color",
    "shadow": true,
    "bindings": [
      {
        "binding_name": "#player_name",
        "binding_type": "collection",
        "binding_collection_name": "$scoreboard_collection_name"
      }
    ]
  },
  "player_avatar": {
    "type": "image",
    "texture": "#texture",
    "texture_file_system": "#texture_source",
    "size": [10, 10],
    "bindings": [
      {
        "binding_name": "#texture",
        "binding_type": "collection",
        "binding_collection_name": "$players_collection_name"
      },
      {
        "binding_name": "#texture_source",
        "binding_name_override": "#texture_file_system",
        "binding_type": "collection",
        "binding_collection_name": "$players_collection_name"
      },
      {
        "binding_name": "#gamerpic_visible",
        "binding_name_override": "#visible",
        "binding_type": "collection",
        "binding_collection_name": "$players_collection_name"
      }
    ]
  },
  "player_gamertag": {
    "type": "label",
    "text": "#gamertag",
    "anchor_from": "left_middle",
    "anchor_to": "left_middle",
    "size": ["default", 10],
    "bindings": [
      {
        "binding_collection_name": "$players_collection_name",
        "binding_name": "#gamertag",
        "binding_type": "collection"
      }
    ]
  },
  "fake_ping_anim": {
    "anim_type": "flip_book",
    "initial_uv": [0, 0],
    "frame_count": 5,
    "frame_step": 10,
    "fps": 0.2,
    "reversible": true,
    "easing": "linear"
  },
  "new_join_ping": {
    "type": "image",
    "texture": "images/join",
    "size": [4, 4],
    "layer": 74,
    "anchor_from": "top_right",
    "anchor_to": "top_right",
    "anims": ["@ryPLHUD.ping_anim"]
  },
  "ping_anim_destroy": {
    "anim_type": "alpha",
    "easing": "in_quart",
    "duration": 7,
    "from": 1,
    "to": 0
  },
  "ping_anim": {
    "anim_type": "wait",
    "duration": 3,
    "next": "@ryPLHUD.ping_anim_destroy"
  },
  "player_counter": {
    "type": "label",
    "size": ["100%", 10],
    "anchor_from": "center",
    "anchor_to": "center",
    "text": "#player_count",
    "bindings": [
      {
        "binding_type": "collection_details",
        "binding_collection_name": "$players_collection_name"
      },
      {
        "binding_type": "collection",
        "binding_collection_name": "$players_collection_name",
        "binding_name": "#collection_index"
      },
      {
        "binding_type": "view",
        "source_property_name": "('§z' + (#collection_index + 1) + ' players')",
